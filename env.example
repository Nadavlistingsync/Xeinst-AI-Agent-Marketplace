# =============================================================================
# AI Agency Website - Environment Configuration
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL (Production)
DATABASE_URL="postgresql://username:password@localhost:5432/ai_agency_db"

# PostgreSQL Database URL (Development)
DATABASE_URL_DEV="postgresql://dev_user:dev_password@localhost:5432/ai_agency_dev"

# Database Connection Pool Settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_POOL_TIMEOUT=30000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-nextauth-key-change-this-in-production"

# Neon Auth (Stack Auth) Configuration
NEXT_PUBLIC_STACK_PROJECT_ID="your-stack-project-id"
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY="your-stack-publishable-client-key"
STACK_SECRET_SERVER_KEY="your-stack-secret-server-key"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# =============================================================================
# AWS S3 CONFIGURATION
# =============================================================================
# AWS Credentials
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"

# S3 Bucket Configuration
S3_BUCKET_NAME="ai-agency-files"
S3_BUCKET_REGION="us-east-1"
S3_ENDPOINT="https://s3.amazonaws.com"

# CDN Configuration
CDN_URL="https://your-cdn-domain.com"
CDN_ENABLED=true

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis Connection (for caching and sessions)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="your-redis-password"
REDIS_DB=0

# Redis Configuration
REDIS_MAX_CONNECTIONS=20
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
# Stripe API Keys
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# Stripe Configuration
STRIPE_CURRENCY="usd"
STRIPE_MINIMUM_AMOUNT=100
STRIPE_MAXIMUM_AMOUNT=100000

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry Error Tracking
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ENVIRONMENT="development"
SENTRY_TRACES_SAMPLE_RATE=0.1

# Vercel Analytics
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# Google Analytics
GA_MEASUREMENT_ID="G-XXXXXXXXXX"
GA_TRACKING_ID="UA-XXXXXXXXX-X"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@yourapp.com"

# Email Templates
EMAIL_VERIFICATION_TEMPLATE="email-verification"
PASSWORD_RESET_TEMPLATE="password-reset"
WELCOME_TEMPLATE="welcome-email"

# =============================================================================
# RATE LIMITING
# =============================================================================
# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# API Rate Limits
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=60
AGENT_EXECUTION_RATE_LIMIT=10

# =============================================================================
# AGENT EXECUTION
# =============================================================================
# Agent Execution Configuration
AGENT_EXECUTION_TIMEOUT=30000
AGENT_MAX_FILE_SIZE=10485760
AGENT_ALLOWED_FILE_TYPES="js,ts,py,json"
AGENT_SANDBOX_ENABLED=true

# Agent Pricing
AGENT_MIN_PRICE=1
AGENT_MAX_PRICE=1000
AGENT_DEFAULT_PRICE=5
AGENT_PLATFORM_FEE_PERCENTAGE=20

# =============================================================================
# WEB EMBED CONFIGURATION
# =============================================================================
# Web Embed Security
WEB_EMBED_ALLOWED_DOMAINS="example.com,trusted-site.com"
WEB_EMBED_BLOCKED_DOMAINS="malicious-site.com"
WEB_EMBED_DEFAULT_SANDBOX="allow-same-origin allow-scripts allow-forms allow-popups"
WEB_EMBED_MAX_WIDTH="100%"
WEB_EMBED_MAX_HEIGHT="800px"

# =============================================================================
# BACKGROUND JOBS
# =============================================================================
# Job Queue Configuration
JOB_QUEUE_REDIS_URL="redis://localhost:6379/1"
JOB_QUEUE_MAX_CONCURRENT_JOBS=5
JOB_QUEUE_RETRY_ATTEMPTS=3
JOB_QUEUE_RETRY_DELAY=5000

# Scheduled Jobs
CLEANUP_OLD_LOGS_CRON="0 2 * * *"
BACKUP_DATABASE_CRON="0 3 * * *"
ANALYTICS_PROCESSING_CRON="0 4 * * *"

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================
# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_RETRIES=3

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_SAMPLE_RATE=0.1
PERFORMANCE_MAX_TRACES=1000

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Environment
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Development Tools
DEBUG_ENABLED=true
LOG_LEVEL="debug"
API_LOGGING_ENABLED=true

# Testing Configuration
TEST_DATABASE_URL="postgresql://test_user:test_password@localhost:5432/ai_agency_test"
TEST_REDIS_URL="redis://localhost:6379/2"

# Mock Services (for development)
MOCK_S3_ENABLED=true
MOCK_STRIPE_ENABLED=true
MOCK_EMAIL_ENABLED=true

# =============================================================================
# DEPLOYMENT & CI/CD
# =============================================================================
# Vercel Configuration
VERCEL_PROJECT_ID="your-vercel-project-id"
VERCEL_TEAM_ID="your-vercel-team-id"

# GitHub Actions
GITHUB_TOKEN="your-github-token"
GITHUB_REPOSITORY="your-username/ai-agency-website"

# Docker Configuration
DOCKER_REGISTRY="your-docker-registry"
DOCKER_IMAGE_TAG="latest"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"
CORS_CREDENTIALS=true

# API Security
API_KEY_HEADER="X-API-Key"
API_KEY_REQUIRED=false

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=100
CACHE_ENABLED=true

# Browser Cache
BROWSER_CACHE_MAX_AGE=31536000
BROWSER_CACHE_STALE_WHILE_REVALIDATE=86400

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Logging Levels
LOG_LEVEL_ERROR="error"
LOG_LEVEL_WARN="warn"
LOG_LEVEL_INFO="info"
LOG_LEVEL_DEBUG="debug"

# Log Output
LOG_OUTPUT_FORMAT="json"
LOG_OUTPUT_DESTINATION="console"

# Log Retention
LOG_RETENTION_DAYS=30
LOG_MAX_FILE_SIZE="10MB"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Feature Toggles
FEATURE_AGENT_EXECUTION_ENABLED=true
FEATURE_WEB_EMBEDS_ENABLED=true
FEATURE_CREDIT_SYSTEM_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_REAL_TIME_MONITORING=true
FEATURE_BACKGROUND_JOBS_ENABLED=true

# =============================================================================
# INTEGRATION KEYS
# =============================================================================
# External Service APIs
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"
REPLICATE_API_KEY="your-replicate-api-key"

# Webhook URLs
WEBHOOK_SLACK_URL="https://hooks.slack.com/services/your-slack-webhook"
WEBHOOK_DISCORD_URL="https://discord.com/api/webhooks/your-discord-webhook"

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET="ai-agency-backups"

# Recovery Configuration
RECOVERY_POINT_OBJECTIVE=3600
RECOVERY_TIME_OBJECTIVE=7200

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Server Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
RESPONSE_TIMEOUT=10000

# Database Tuning
DB_CONNECTION_POOL_SIZE=10
DB_QUERY_TIMEOUT=30000
DB_IDLE_TIMEOUT=30000

# Memory Management
NODE_OPTIONS="--max-old-space-size=4096"
GARBAGE_COLLECTION_ENABLED=true

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Development Server
DEV_SERVER_PORT=3000
DEV_SERVER_HOST="localhost"

# Hot Reload
HOT_RELOAD_ENABLED=true
HOT_RELOAD_POLL_INTERVAL=1000

# Debug Tools
DEBUG_AGENT_EXECUTION=true
DEBUG_DATABASE_QUERIES=true
DEBUG_API_REQUESTS=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test Environment
TEST_ENVIRONMENT="local"
TEST_TIMEOUT=10000
TEST_RETRIES=3

# Test Data
TEST_USER_EMAIL="test@example.com"
TEST_USER_PASSWORD="test-password-123"
TEST_AGENT_ID="test-agent-id"
TEST_DEPLOYMENT_ID="test-deployment-id"

