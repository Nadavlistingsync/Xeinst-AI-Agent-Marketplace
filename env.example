# =============================================================================
# AI Agency Website - Environment Variables Example
# =============================================================================
# Copy this file to .env and fill in your actual values
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database URL (for Prisma)
DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres

# =============================================================================
# AUTHENTICATION
# =============================================================================

# Stack Auth Configuration
NEXT_PUBLIC_STACK_PROJECT_ID=your-stack-project-id
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your-stack-publishable-key
STACK_SECRET_SERVER_KEY=your-stack-secret-key

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Stripe Connect (for marketplace)
STRIPE_CONNECT_CLIENT_ID=ca_your-stripe-connect-client-id

# =============================================================================
# AI/LLM SERVICES
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# =============================================================================
# FILE STORAGE
# =============================================================================

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Vercel Analytics
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn

# =============================================================================
# EMAIL SERVICES
# =============================================================================

# Resend (Email Service)
RESEND_API_KEY=re_your-resend-api-key

# =============================================================================
# REDIS (Caching)
# =============================================================================

# Upstash Redis
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Environment
NODE_ENV=development

# Debug Mode
DEBUG=false

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================

# Webhook Signing Secret
WEBHOOK_SECRET=your-webhook-signing-secret

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_STRIPE_PAYMENTS=true
ENABLE_AI_FEATURES=true
ENABLE_FILE_UPLOADS=true
ENABLE_ANALYTICS=true

# =============================================================================
# RATE LIMITING
# =============================================================================

# API Rate Limits
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# SECURITY
# =============================================================================

# CORS Origins
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# JWT Secret
JWT_SECRET=your-jwt-secret-key

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Push Notifications
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# =============================================================================
# INTEGRATIONS
# =============================================================================

# GitHub (for agent repositories)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Discord (for notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# =============================================================================
# DEPLOYMENT
# =============================================================================

# Vercel
VERCEL_URL=your-vercel-url

# Custom Domain
CUSTOM_DOMAIN=your-custom-domain.com

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Database Backup
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# =============================================================================
# COMPLIANCE
# =============================================================================

# GDPR Compliance
ENABLE_GDPR_COMPLIANCE=true

# Data Retention (days)
DATA_RETENTION_DAYS=365

# =============================================================================
# TESTING
# =============================================================================

# Test Database
TEST_DATABASE_URL=postgresql://postgres:test-password@localhost:5432/test_db

# Test Stripe Keys
STRIPE_TEST_PUBLISHABLE_KEY=pk_test_your-test-stripe-key
STRIPE_TEST_SECRET_KEY=sk_test_your-test-stripe-secret

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit your actual .env file to version control
# 2. Use different keys for development, staging, and production
# 3. Rotate your secrets regularly
# 4. Use environment-specific values for each deployment
# 5. Keep your service role keys secure and never expose them client-side
# =============================================================================