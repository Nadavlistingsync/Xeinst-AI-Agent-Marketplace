# Production Environment Variables
# Copy this file to .env.local and fill in your actual values

# ========================================
# DATABASE (Supabase)
# ========================================
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://[YOUR-PROJECT-REF].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="[YOUR-ANON-KEY]"
SUPABASE_SERVICE_ROLE_KEY="[YOUR-SERVICE-ROLE-KEY]"

# ========================================
# AUTHENTICATION
# ========================================
NEXTAUTH_SECRET="[GENERATE-WITH-openssl-rand-base64-32]"
NEXTAUTH_URL="https://your-domain.vercel.app"

# ========================================
# PAYMENT (Stripe)
# ========================================
# Stripe Live Keys (for production)
STRIPE_SECRET_KEY="sk_live_[YOUR-LIVE-SECRET-KEY]"
STRIPE_PUBLISHABLE_KEY="pk_live_[YOUR-LIVE-PUBLISHABLE-KEY]"
STRIPE_WEBHOOK_SECRET="whsec_[YOUR-WEBHOOK-SECRET]"

# ========================================
# MONITORING & ANALYTICS
# ========================================
SENTRY_DSN="https://[YOUR-SENTRY-DSN]"
SENTRY_AUTH_TOKEN="[YOUR-SENTRY-AUTH-TOKEN]"

# ========================================
# EMAIL (Optional)
# ========================================
# SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Or use Resend
RESEND_API_KEY="re_[YOUR-RESEND-API-KEY]"

# ========================================
# REDIS (Optional - for caching)
# ========================================
UPSTASH_REDIS_REST_URL="https://[YOUR-REDIS-URL]"
UPSTASH_REDIS_REST_TOKEN="[YOUR-REDIS-TOKEN]"

# ========================================
# SECURITY
# ========================================
JWT_SECRET="[GENERATE-ANOTHER-SECRET-KEY]"
ENCRYPTION_KEY="[GENERATE-32-CHAR-ENCRYPTION-KEY]"

# ========================================
# FEATURE FLAGS
# ========================================
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_PAYMENTS="true"
NEXT_PUBLIC_ENABLE_CHAT="true"

# ========================================
# APP CONFIGURATION
# ========================================
NEXT_PUBLIC_APP_URL="https://your-domain.vercel.app"
NEXT_PUBLIC_APP_NAME="Xeinst AI Agent Marketplace"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"
API_RATE_LIMIT_WINDOW_MS="60000"
API_RATE_LIMIT_MAX_REQUESTS="60"

# ========================================
# OAUTH INTEGRATIONS
# ========================================
# Make.com OAuth
MAKE_CLIENT_ID="[YOUR-MAKE-CLIENT-ID]"
MAKE_CLIENT_SECRET="[YOUR-MAKE-CLIENT-SECRET]"

# Zapier OAuth
ZAPIER_CLIENT_ID="[YOUR-ZAPIER-CLIENT-ID]"
ZAPIER_CLIENT_SECRET="[YOUR-ZAPIER-CLIENT-SECRET]"

# n8n OAuth (if using hosted n8n)
N8N_CLIENT_ID="[YOUR-N8N-CLIENT-ID]"
N8N_CLIENT_SECRET="[YOUR-N8N-CLIENT-SECRET]"

# ========================================
# AGENT CONFIGURATION
# ========================================
AGENT_EXECUTION_TIMEOUT="30000"
AGENT_MAX_FILE_SIZE="10485760"
AGENT_DEFAULT_PRICE="5"
AGENT_PLATFORM_FEE_PERCENTAGE="20"

# ========================================
# DEPLOYMENT
# ========================================
NODE_ENV="production"
NEXT_PHASE="phase-production-build"
